{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=resumegenerator;Username=resumeuser;Password=yourpassword"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/resume-generator-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "ClaudeApi": {
    "ApiKey": "your-claude-api-key-here",
    "BaseUrl": "https://api.anthropic.com",
    "Model": "claude-sonnet-4-20250514",
    "ApiVersion": "2023-06-01",
    "MaxTokens": 4096,
    "Temperature": 0.3,
    "TimeoutSeconds": 60,
    "RetryAttempts": 3,
    "RetryDelayMs": 1000
  },
  "OpenAI": {
    "ApiKey": "your-openai-api-key-here",
    "BaseUrl": "https://api.openai.com/v1",
    "ReviewModel": "gpt-4o",
    "MaxTokens": 2048,
    "Temperature": 0.2,
    "TimeoutSeconds": 45,
    "RetryAttempts": 3,
    "RetryDelayMs": 1000,
    "OrganizationId": ""
  },
  "GoogleDocs": {
    "ServiceAccountCredentials": "",
    "ApplicationName": "Resume Generator API",
    "TimeoutSeconds": 30,
    "RetryAttempts": 3
  },
  "Application": {
    "MaxConcurrentJobs": 5,
    "JobTimeoutMinutes": 15,
    "JobRetentionDays": 30,
    "FailedJobRetentionDays": 7,
    "EnableDetailedLogging": false,
    "EnableJobQueue": true,
    "JobQueuePollingIntervalSeconds": 5,
    "MaxTemplateSizeMb": 10,
    "AllowedTemplateExtensions": [".html", ".md", ".txt"]
  },
  "RateLimit": {
    "Enabled": true,
    "RequestsPerMinute": 10,
    "MaxConcurrentJobsPerIp": 3,
    "WhitelistedIps": ["127.0.0.1", "::1"]
  },
  "AllowedHosts": "*"
}